import os
import glob
import json
import agent
from jinja2 import Environment, FileSystemLoader, select_autoescape

for file in glob.iglob("piler_etc/*"):
    os.remove(file)

jenv = Environment(
    loader=FileSystemLoader(os.getenv("AGENT_INSTALL_DIR")+"/templates"),
    autoescape=select_autoescape(),
    keep_trailing_newline=True,
)

rdb = agent.redis_connect(use_replica=True)

providers = agent.list_service_providers(rdb, 'imap', 'tcp', {
    'module_uuid': os.environ.get("MAIL_SERVER")
})
# retrieve domains from the mails server and build a list
domains = []
if providers:
    mail_id = providers[0]["module_id"]
    response = agent.tasks.run(f"module/{mail_id}", action='list-domains')
    for kd in response['output']:
        if kd.get('addusers') == True:
            domains.append(kd['domain'])

# build the object to pass to the jinja template
properties = {
    "host":  os.environ.get("TRAEFIK_HOST",''),
    "imap_host": os.environ.get("IMAP_HOST",''),
    "domains": domains,
}

json_properties = json.dumps(properties)

template = jenv.get_template('piler.conf')
output = template.render(json.loads(json_properties))
with open("piler_etc/piler.conf","w") as f:
    f.write(output)

template = jenv.get_template('config-site.php')
output = template.render(json.loads(json_properties))
with open("piler_etc/config-site.php","w") as f:
    f.write(output)
